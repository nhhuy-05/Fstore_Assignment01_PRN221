<Window x:Class="SalesWPFApp.MemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MemberWindow" Height="450" Width="800">
    <Grid>
        <ListView Grid.Row="2" Name="lvMember" Width="Auto" Height="Auto" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Member Id"  Width="100"
                                    DisplayMemberBinding="{Binding Path=MemberId }"/>
                    <GridViewColumn Header="Company Name" Width="200"
                                    DisplayMemberBinding="{Binding Path=Email}"/>
                    <GridViewColumn Header="City"  Width="200"
                                    DisplayMemberBinding="{Binding Path=City }"/>
                    <GridViewColumn Header="Country" Width="100"
                                    DisplayMemberBinding="{Binding Path=Country}"/>
                    <GridViewColumn Header="ReleasedYear"  Width="100"
                                    DisplayMemberBinding="{Binding Path=Password}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
