<Window x:Class="SalesWPFApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <Grid>
        <StackPanel Background="LightBlue" Orientation="Vertical">
            <Label Content="Login Form" FontSize="25"></Label>
            <Label FontSize="15">Email</Label>
            <TextBox Name="txtEmail" Height="25"></TextBox>
            <Label FontSize="15">Password</Label>
            <PasswordBox Name="txtPass" Height="25"></PasswordBox>
            <Button Name="btnLogin" Width="80" Content="Login"
                    Margin="0,10,0,0" Click="LoginBtn"></Button>
        </StackPanel>
    </Grid>
</Window>
